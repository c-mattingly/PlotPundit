<%- include('../partials/header') %>

<main id="loginMain">
    <% if (user) { %>
        <h2>Hello <%= user.name %></h2>
        <h4>here are the movies you've rated</h4>
        <table id="list">
            <thead>
              <tr>
                <th>Title</th>
                <th>Release<br>Year</th>
                <th>Platform</th>
                <th>Date Watched</th>
                <th>Rating</th>
              </tr>
            </thead>
            <tbody>
              <% movies.forEach(function(m) { %>
                <tr>
                  <td><%= m.title %></td>
                  <td><%= m.year %></td>
                  <td><%= m.platform %></td>
                  <td><%= m.dateWatched %></td>
                  <td><%= m.rating %></td>
                </tr>
                <% }); %>
              </tbody>
            </table>
        
      <% } else { %>
        <a href="/auth/google"><button>Login with Google</button></a>
      <% } %>       
</main>

<%- include('../partials/footer') %>